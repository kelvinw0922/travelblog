<h1>Stories</h1>
<div class="row">
    {{#each blogs}}
    <div class="col s12 m6 l6 xl4">
        <div class="card">
            <div class="card-image">
                {{#if coverImage.data}}
                {{{writeImage coverImage.data}}}
                {{else}}
                {{{defaultImage}}}
                {{/if}}
                {{#if user}}
                {{{editIcon user.id ../user.id id}}}
                {{/if}}
            </div>
            <div class="card-content center-align">
                <span class="card-title"><strong>{{truncate title 20}}</strong></span>
                <!-- Need tripe bracket to parse HTML text -->
                <!-- <p class="story-text">{{{body}}}</p> -->
                <div class="blog-text">{{{truncate body 150}}}</div>
                <br>
                <div class="chip">
                    <img src="{{user.image}}" alt="{{user.firstName}} {{user.lastName}}">
                    <a href="/blogs/user/{{user.id}}">{{user.firstName}} {{user.lastName}}</a>
                </div>
            </div>
            <div class="card-action center-align">
                <a class="btn grey" href="/blogs/show/{{id}}">Read More</a>
                {{#if ../user}}
                {{{checkScoreStatus scoreStatus ../user.id id score}}}
                {{/if}}
            </div>
        </div>
    </div>
    {{else}}
    <p>No story at the moment</p>
    {{/each}}

</div>